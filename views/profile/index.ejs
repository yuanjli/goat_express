<div class="container">

<h2>  <%= currentUser.firstname %>'s Profile </h2>

<div class="row">
	<div class="col s6"> 
		<img class="profilePic" src="<%=currentUser.image%>">
	</div>     
	<div class="col s6"> 
		<h4> Your Info </h4>
		<p> Fisrt name:   <%= currentUser.firstname %>   </p>
		<p> Last name:   <%= currentUser.lastname %>   </p>
		<p> Admin Status:   <%= currentUser.admin ? 'yes' : 'no' %>   </p>
		<p> Email:   <%= currentUser.email %>  </p>
	</div>

</div>




</div>